#!/bin/bash

#nvim
alias v='pass show chatgpt && nvim'
alias vi='echo vi is old shit, just use v'

#Git aliases
alias gs='git status'
#Git combo which will ask for commit, otherwise do it all
alias gacp='git add . && git commit -e && if [ $? -eq 0 ]; then git push; fi'

#Copypath
alias copa='copypath'

#Chezmoi
alias ch='chezmoi'
alias chan='chezmoi add -r ~/.config/nvim/ && chezmoi cd && git status'

#Tmux
# Define alias function
tmuxAttach() {
    if [ -z "$1" ]; then
        tmux attach
    else
        tmux attach -t "$1"
    fi
}


tmuxNewSession() {
    if [ -z "$1" ]; then
        tmux 
    else
        tmux new-session -s "$1"
    fi
}

# Create alias
alias tma='tmuxAttach'
alias tm='tmuxNewSession'
alias tml='tmux ls'
